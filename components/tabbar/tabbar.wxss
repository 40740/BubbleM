@import './../../skin/icon.wxss'; /* 引入外部icon样式*/

/* components/tabbar/tabbar.wxss */
.tabbar-wrap{
  height: 100rpx;
  width: 100%;
  background-color: #F3F3F3;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  line-height: 50rpx;
  display: flex;
}
.tabbar-item{
  height: 50rpx;
  width: 25%;
  display: flex;
  flex-direction:column;
}
.item-icon{
  font-size: 50rpx;
}
.item-txt{
  font-size: 30rpx;
}
.center-icon{
  line-height: 100rpx;
  font-size: 60rpx;
}
.checked{
  color: #00B4E9;
  line-height: 100rpx;
  font-size: 70rpx;
}
.checked .item-icon{
  font-size: 70rpx;
}